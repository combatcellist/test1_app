<div class="content-wrapper">
  <div class="content-block">
  <% @posts.each do |post| %>
    <div class="content">
      <div class="user-about">
        <div class="image">
         <%= image_tag "IMG_6389.jpg" %>
        </div>
        <div class="profile">
         <div class="name-history">
            <div class="name">
              洋食屋熊谷
            </div>
            <div class="learning-history">
              コロナに負けず新作を試作中！！
            </div>
         </div>
          <div class="purpose">
           お店住所: 神奈川県藤沢市本町2-2-2
          </div>
        </div>
     </div>

    <div class="text">
     <p><%= post.content %></p>
     <%= link_to post_path(post.id) do %>
     <% if post.images.attached? %>
        <%  post.images.each do |image| %>
          <%= image_tag image %>
        <% end %>
     <% end %>
     <% end %>
    </div>

   <div class="action-menu">
      <div class="like">
      
      </div>
      <div class="comment">
       <% if @comments %>
          <% @comments.each do |comment| %>
            <%= comment.text %>
          <% end %>
       <% end %>

       <%= form_with model: @comment do |f| %>
        <%= f.text_field :text %>
        <%= f.submit 'コメントする' %>
       <% end %>
      

      </div>
    </div>
   </div>
   <% end %>
  </div>
</div>